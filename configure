#! /bin/sh
case `uname` in
     Linux)
       cp -i config.linux config
       echo "Copied: config.linux => config"
     ;;
     *)
       cp -i config.linux config
       echo "Copied: config.linux => config"
     ;;
esac
echo 'Please customize the file "config" to your needs.'
echo 'Then build by executing "make".'